<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9F4CA"
    tools:context="com.galaxy.cropdoc.MainActivity3">

    <Button
        android:id="@+id/connect"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="@string/connect"
        android:backgroundTint="#43C15A"
        android:textColor="#030303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:backgroundTint="#43C15A"
        android:textColor="#030303"
        android:id="@+id/reboot"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="@string/reboot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connect"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/relaunch"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:backgroundTint="#43C15A"
        android:textColor="#030303"
        android:text="@string/relaunch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reboot"
        app:layout_constraintVertical_bias="0.628" />

    <Button
        android:id="@+id/shutdown"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:backgroundTint="#43C15A"
        android:textColor="#030303"
        android:text="@string/shutdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relaunch"
        app:layout_constraintVertical_bias="0.514" />

    <EditText
        android:id="@+id/lg_ip_ac3"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#43C15A"
        android:hint="192.168.1.85"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="#030303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/setRefresh"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:backgroundTint="#43C15A"
        android:textColor="#030303"
        android:text="Set refresh"
        app:layout_constraintBottom_toTopOf="@+id/relaunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reboot"
        app:layout_constraintVertical_bias="0.221" />

    <Button
        android:id="@+id/resetR"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:backgroundTint="#43C15A"
        android:textColor="#030303"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="34dp"
        android:text="Reset refresh"
        app:layout_constraintBottom_toTopOf="@+id/relaunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setRefresh" />


</androidx.constraintlayout.widget.ConstraintLayout>